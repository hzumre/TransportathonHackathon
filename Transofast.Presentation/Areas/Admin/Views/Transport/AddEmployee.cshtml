@using Transofast.Presentation.Areas.User.Models.ViewModels.TransportVM;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "AddEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TransportUpdateVM

<section class="book_section">
    <div class="form_container">
        <form method="post" asp-area="Admin" asp-action="AddEmployee" asp-controller="Transport">
            <div class="form-row">
                <div class="col-lg-8">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label for="parkingName">From Address</label>
                            <input type="text" readonly class="form-control" asp-for=@Model.FromAddress placeholder="FromAddress" aria-label="FromAddress">
                        </div>
                        <div class="col-md-6">
                            <label for="parkingNumber">To Address</label>
                            <input type="text" readonly class="form-control" asp-for="@Model.ToAddress" placeholder="ToAddress" aria-label="ToAddress">
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <label for="parkingName">Transport Type</label>
                            <input type="text" readonly class="form-control" asp-for="@Model.TransportType" placeholder="ToAddress" aria-label="ToAddress">
                        </div>
                        <div class="col-md-6">
                            <label for="parkingNumber">Company</label>
                            <input type="text" readonly class="form-control" asp-for="@Model.CompanyID" placeholder="ToAddress" aria-label="ToAddress">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <label for="parkingNumber">Transport Date</label>
                            <input type="date" readonly class="form-control" asp-for="@Model.TransportDate" placeholder="TransportDate" aria-label="TransportDate">
                        </div>
                        <div class="col-md-6">
                            <label for="parkingNumber">Description</label>
                            <textarea readonly class="form-control" asp-for="@Model.Description" placeholder="Description" aria-label="Description"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label for="parkingNumber">Price</label>
                            <input readonly type="text" class="form-control" asp-for="@Model.Price" placeholder="Price" aria-label="Price">
                        </div>
                        <div class="col-md-6">
                            <label for="parkingNumber">Employee</label>
                            <select class="form-control" aria-label="Floating label select example" asp-for="@Model.EmployeeID">
                                <option selected value="0">Select Employee... </option>
                                @foreach (var item in Model.EmployeeList)
                                {
                                    <option value="@item.Id">@item.UserName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="btn-container">
                            <button type="submit" class="">Add Employee</button>
                        </div>
                        <input type="text" readonly hidden class="form-control" asp-for=@Model.AppUserID placeholder="FromAddress" aria-label="FromAddress">
                    </div>
                </div>

        </form>
    </div>
    <div class="img-box">
        <img src="~/images/book-car.png" alt="">
    </div>
</section>


@using Transofast.Presentation.Areas.User.Models.ViewModels.TransportVM;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<TransportListVM>

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">

        <div class="table-responsive">
            <table id="example" class="table pt-3">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th>From Address</th>
                        <th>To Address</th>
                        <th>Description</th>
                        <th>Transport Date</th>
                        <th>Transport Type</th>
                        <th>Price</th>
                        <th>Actions</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope="row">-</td>
                            <td>@item.FromAddress</td>
                            <td>@item.ToAddress</td>
                            <td>@item.Description</td>
                            <td typeof="date">@item.TransportDate</td>
                            <td>@item.TransportType</td>
                            <td>@item.Price</td>
                            @if(item.Price==null)
                            {
                                <td>
                                    <a asp-action="Edit" asp-area="Admin" asp-controller="Transport" asp-route-id="@item.ID" type="button" class="btn btn-secondary">
                                        Response
                                    </a>
                                    <a asp-action="Reject" asp-area="Admin" asp-controller="Transport" asp-route-id="@item.ID" type="button" class="btn btn-danger">
                                        Reject
                                    </a>
                                </td>
                            }

                            else
                            {
                                <td>
                                    <button disabled type="button" class="btn btn-info">
                                        Response
                                    </button>
                                    <button disabled type="button" class="btn btn-danger">
                                        Reject
                                    </button>
                                </td>
                            }

                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </div>
</div>


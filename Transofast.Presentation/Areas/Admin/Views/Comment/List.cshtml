@using Transofast.Presentation.Areas.Admin.Models.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<CommentListVM>

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">

        <div class="table-responsive">
            <table id="example" class="table pt-3">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th>Send Comment</th>
                        <th>Score</th>
                        <th>AppUserID</th>
                        

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope="row">-</td>
                            <td>@item.SendComment</td>
                            <td>@item.Score</td>
                            <td>@item.AppUserID</td>
                        </tr>

                    }


                </tbody>
            </table>

        </div>
    </div>
</div>



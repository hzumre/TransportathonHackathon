@using Transofast.Presentation.Areas.User.Models.ViewModels.UserVM;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model UserVM

@{
    int companyId = Convert.ToInt32(TempData["companyID"]);
}

@{
    string companyName = TempData["companyName"] as string;
}

<html lang="en">
<style>

    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    * {
        box-sizing: border-box;
    }

    input[type=text], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
    }

    input[type=date], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
    }

    input[type=email], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
    }

    input[type=number], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
    }

    input[type=password], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
    }

    input[type=submit] {
        background-color: #04AA6D;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }


</style>

<div class="container-xl px-4 mt-4">


    <form enctype="multipart/form-data" method="post" asp-action="Create" asp-area="Admin" asp-controller="Employee">


        
        <br />
        <div class="card mb-4 mb-xl-0">
            <div class="card-header" style="font-size:18px;">Details</div>

            <div class="card-body">
                <div class="mb-3">
                    <label style="font-size:16px;" for="form3Example1c" asp-for="@Model.UserName">Name:</label>
                    <input style="font-size:16px;" asp-for="@Model.UserName" id="form3Example1c" type="text" />
                     <span asp-validation-for="UserName" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label style="font-size:16px;" asp-for=@Model.Email class="small mb-1" for="inputEmailAddress">E-mail:</label>
                    <input style="font-size:16px;" asp-for=@Model.Email id="inputEmailAddress" type="email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-outline flex-fill mb-0">
                    <label style="font-size:16px;" class="form-label" for="form3Example1c" asp-for="@Model.Password">Password:</label>

                    <input style="font-size:16px;" asp-for="@Model.Password" id="form3Example1c" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>

                <div class="mb-3">
                    <label style="font-size:16px;" class="small mb-1" for="inputUsername">Company:</label>
                    <input style="background-color:lightgrey;" style="font-size:16px;" readonly id="inputUsername" type="text" value="@companyName.ToString()">
                </div>

                <div class="mb-3">
                    <label hidden style="font-size:16px;" asp-for=@Model.CompanyID class="small mb-1" for="inputUsername">CompanyID:</label>
                    <input hidden style="background-color:lightgrey;" style="font-size:16px;" readonly asp-for=@Model.CompanyID id="inputUsername" type="text" value="@companyId">
                </div>

                <div class="mb-3">
                    <label style="font-size:16px;" asp-for=@Model.PhoneNumber class="small mb-1" for="inputLocation">Phone Number:</label>
                    <input style="font-size:16px;" asp-for=@Model.PhoneNumber id="inputLocation" type="text">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                </div>

                <!-- Save changes button-->
                <button type="submit" style="font-size:16px;" class="btn btn-primary float-right">Create</button>

            </div>
        </div>

    </form>

</div>


</html>


@using Transofast.Presentation.Areas.User.Models.ViewModels.MessageVM;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MessageCreateVM

<div class="form-floating mb-8 p-4">
    <div class="container-fluid pt-8 px-8">

        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h4 class="mb-4">Send Message</h4>
                <form method="post" asp-action="Create" asp-controller="Message">
                    <div class="form-floating mb-6">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" asp-for=@Model.SendMessage placeholder="FromAddress" aria-label="FromAddress">
                        </div>
                    </div>
                    <br />
                

                    <button type="submit" class="btn btn-outline-success m-2">Create A Transportation Demand</button>

                </form>

            </div>
        </div>
    </div>
</div>



